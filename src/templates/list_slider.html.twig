{% extends "layouts/main.html.twig" %}

{% block head %}
    {{ parent() }}
    <title>Список слайдов</title>
{% endblock %}


{% block content %}
    <div style="position: relative">
        {% if controls.add %}
            <ul class="control">
                <li>
                    <a href="{{ controls.add.href }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
        {% endif %}

        <table class="table table-striped" style="margin-top: 10px;">
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            {% for slide in sliders %}
                <tr>
                    <td>{{ slide.id }}</td>
                    <td>{{ slide.title }}</td>
                    <td><img src="/files/slider/{{ slide.files }}" alt="{{ slide.title }}"></td>
                    <td>
                        {% if controls.edit %}
                            <a href="{{ controls.edit.href }}{{ slide.id }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        {% endif %}
                        {% if controls.remove %}
                            <a href="{{ controls.remove.href }}{{ slide.id }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        {% endif %}
                    </td>
                </tr>
             {% endfor %}
        </table>
    </div>
{% endblock %}

