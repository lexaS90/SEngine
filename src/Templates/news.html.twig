{% extends "layouts/main.html.twig" %}

{% block head %}
    {{ parent() }}
    <title>Новости</title>
{% endblock %}


{% block content %}

    {% if addButton is not empty %}
        <a href="{{ addButton.href }}" data-remote="false" data-toggle="modal" data-target="#myModal" class="btn btn-default">{{ addButton.text }}</a>
    {% endif %}

    {% for artical in news %}

    <h2><a href="/news/artical?id={{ artical.id }}">{{ artical.title }}</a></h2>
    {% if artical.files is not empty %}
        <img src="{{ base }}/files/100_100/{{ artical.files }}" alt="{{ artical.title }}">
    {% endif %}
        <div class="articles">
        {{ artical.text|raw }}
    </div>
    <div>
        {% for button in controls %}
            <a href="{{ button.href }}{{ artical.id }}" data-remote="false" data-toggle="modal" data-target="#myModal" class="btn btn-default">{{ button.text }}</a>
        {% endfor %}
    </div>
    {% endfor %}

    {{ form|raw }}

{% endblock %}

