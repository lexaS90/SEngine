{% extends "layouts/main.html.twig" %}

{% block head %}
    {{ parent() }}
    <title>Главная</title>
{% endblock %}


{% block content %}

    <!--nunc dig start here-->
    <div class="nuncdig">

        {% if controls.add %}
        <ul class="control">
            <li>
                <a href="{{ controls.add.href }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
        {% endif %}

        <div class="nuncdig-main">
            <div class="nunc-top">
                <h3>Новости</h3>
            </div>
            <div class="nunc-bott">

                {% for artical in news %}

                <div class="col-md-4 nunc-bott-grid">

                    <ul class="control">
                        {% if controls.edit %}
                            <li>
                                <a href="{{ controls.edit.href }}{{ artical.id }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                            </li>
                        {% endif %}
                        {% if controls.remove %}
                            <li>
                                <a href="{{ controls.remove.href }}{{ artical.id }}" data-remote="false" data-toggle="modal" data-target="#myModal">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>

                    <div class="headind-text">
                        <h3>{{ artical.title }}</h3>
                    </div>
                    {{ artical.text|raw }}
                    <div class="nunc-bwn">
                        <a href="{{ base }}/news/artical?id={{ artical.id }}">More</a>
                    </div>
                </div>

                {% endfor %}


                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!--nunc dig end here-->


    <script src="{{ base }}/src/templates/js/jquery.min.js"></script>
    <script src="{{ base }}/src/templates/js/responsiveslides.min.js"></script>
    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 4
            $("#slider4").responsiveSlides({
                auto: true,
                pager: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
                before: function () {
                    $('.events').append("<li>before event fired.</li>");
                },
                after: function () {
                    $('.events').append("<li>after event fired.</li>");
                }
            });

        });
    </script>

    <!-- Slideshow 4 -->
    <div  id="top" class="callbacks_container">
        <div class="molli">
            <div class="molli-top">
                <span class="line-x"> </span>
                <span class="line-y"> </span>
                <h3>MORBI INTERDUM MOLLIS</h3>
                <P>Vestibulum auctor dapibus nequ</P>
            </div>
            <ul class="rslides" id="slider4">
                <li>
                    {#{% set i = 1 %}#}
                    {% for k,slide in sliders %}

                        {% if ((k) % 4) == 0 %}

                            </li>
                            <li>
                        {% endif %}
                            <div class="molli-grids">
                                <img src="{{ base }}/files/slider/{{ slide.files }}" alt="{{ slide.title }}"/>
                                <div class="molli-text">
                                    <h4>{{ slide.title }}</h4>
                                </div>
                            </div>



                        {#{% set i = i+1 %}#}
                    {% endfor %}
                </li>
            </ul>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="clearfix"> </div>
    <!--molli end here-->



{% endblock %}

